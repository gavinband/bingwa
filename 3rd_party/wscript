def build( bld ):
	bld(
		name = 'eigen',
		export_incdirs = 'eigen',
		uselib = ''
	)
	
	bld(
		features = 'cc cshlib',
		target = 'sqlite3',
		source = [ 'sqlite3/sqlite3/sqlite3.c' ],
		includes = 'sqlite3/',
		defines = 'SQLITE_ENABLE_COLUMN_METADATA',
		uselib = 'DL',
		export_incdirs = 'sqlite3'
	)

	bld(
		features = 'cc cshlib',
		target = 'sqlite3_zlib',
		source = [ 'sqlite3/sqlite3/mycompress.c' ],
		includes = 'sqlite3/',
		uselib_local = 'sqlite3',
		uselib = 'SQLITE3 ZLIB',
		export_incdirs = 'sqlite3'
	)
