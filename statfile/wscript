import os.path
import glob
#import UnitTest

def configure( conf ):
	pass

def create_test( bld, name ):
	bld.new_task_gen(
		features = 'cxx cprogram',
		target = name,
		source = [  'test/' + name + '.cpp' ],
		uselib_local = 'statfile',
		includes='./include',
		unit_test=1,
		install_path=None
	)

def create_benchmark( bld, name ):
	bld.new_task_gen(
		features = 'cxx cprogram',
		target = name,
		source = [  'benchmarks/' + name + '.cpp' ],
		uselib_local = 'statfile',
		includes='./include',
		install_path=None
	)


def build( bld ):
	import Options
	
	#---------------------
	# libs
	#---------------------
	bld.new_task_gen(
		features = 'cxx cstaticlib',
		target = 'statfile',
		source = [
			'src/statfile_utils.cpp',
			'src/RFormatStatSink.cpp',
			'src/RFormatStatSource.cpp'
		],
		includes='./include',
		export_incdirs='./include',
		uselib = 'BOOST ZLIB BOOST_IOSTREAMS'
	)

	create_test( bld, 'test_RFormat' )
